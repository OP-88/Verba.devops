{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Verba AI Transcription",
    "version": "2.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "fs": {
        "all": true,
        "scope": ["$AUDIO", "$APPDATA", "$DOWNLOAD", "$DOCUMENT", "$RESOURCE"]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["http://localhost:8000/*", "https://openrouter.ai/*"]
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": ["deb", "appimage", "dmg", "nsis"],
      "identifier": "com.verba.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["../backend/**/*"],
      "externalBin": ["python3", "pip3"],
      "category": "Productivity",
      "shortDescription": "AI-Powered Audio Transcription with Speaker Diarization",
      "longDescription": "Offline-first audio transcription with speaker diarization, AI summarization, and intelligent chatbot"
    },
    "security": {
      "csp": "default-src 'self' http://localhost:8000 https://openrouter.ai; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval'"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Verba - AI Audio Transcription",
        "width": 1400,
        "height": 900,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "macOSPrivateApi": true,
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  }
}